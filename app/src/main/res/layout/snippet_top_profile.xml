<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp">


        <TextView
            android:id="@+id/textViewposts"
            android:layout_width="19dp"
            android:layout_height="28dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="16dp"
            android:text="0"
            android:textColor="#010C01"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/textposts"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textposts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:textColor="#0A0000"
            android:textSize="17dp"
            android:background="@drawable/white_rounded_button"
            android:backgroundTint="@color/lightgreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewposts" />

        <TextView
            android:id="@+id/textViewfollowers"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="0"
            android:textColor="#0E0303"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/textViewfollowing"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toEndOf="@+id/textposts"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textfollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Admirers"
            android:background="@drawable/white_rounded_button"
            android:backgroundTint="@color/lightgreen"
            android:textColor="#050101"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/textfollowing"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintStart_toEndOf="@+id/textposts"
            app:layout_constraintTop_toBottomOf="@+id/textViewfollowers" />

        <TextView
            android:id="@+id/textViewfollowing"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginRight="10dp"
            android:textColor="#FD110101"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textfollowing"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Admiring"
            android:textColor="#FA0C0000"
            android:textSize="17dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_rounded_button"
            android:backgroundTint="@color/lightgreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewfollowing" />

        <TextView
            android:id="@+id/textEditProfile"
            android:layout_width="179dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/white_rounded_button"
            android:backgroundTint="@color/grey2"
            android:text="Edit your profile"
            android:textAlignment="center"
            android:textColor="#0F0000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textfollowers"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>